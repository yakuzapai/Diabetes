<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <android.support.v7.widget.CardView
            android:foreground="@drawable/item_selector"
            android:clickable="true"
            android:id="@+id/hospitalCard"
            android:layout_margin="@dimen/default_magin"
            android:layout_width="match_parent"
            android:layout_height="230dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <ImageView
                    android:id="@+id/hospitalImg"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hospital"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <RelativeLayout
                    android:background="#88888888"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/hospitalText"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@android:color/white"
                        android:text="HOSPITAL HOSPITAL HOSPITAL HOSPITAL HOSPITAL HOSPITAL HOSPITAL HOSPITAL "
                        android:layout_margin="@dimen/default_magin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>


                <ImageView
                    android:layout_marginRight="@dimen/default_magin"
                    android:layout_marginBottom="32dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


</RelativeLayout>